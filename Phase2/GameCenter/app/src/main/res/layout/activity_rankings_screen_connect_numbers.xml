<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/rankings_3x3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:backgroundTint="#2C3E50"
        android:textColor="#33A8FF"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/edit_text_style"
        android:text="Connect 3 Rankings"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />

    <Button

        android:id="@+id/rankings_4x4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:backgroundTint="#2C3E50"
        android:textColor="#33A8FF"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/edit_text_style"
        android:text="Connect 4 Rankings"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478" />

    <Button
        android:id="@+id/rankings_5x5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:backgroundTint="#2C3E50"
        android:textColor="#33A8FF"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/edit_text_style"
        android:text="Connect 5 Rankings"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.718" />

</android.support.constraint.ConstraintLayout>