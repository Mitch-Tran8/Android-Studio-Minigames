<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="phase1.gamecenter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".StartingActivity" />
        <activity android:name=".GameActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".GameCenterMainActivity" />
        <activity android:name=".SlidingTileMainPageActivity" />
        <activity android:name=".BoardComplexity" />
        <activity android:name=".UserScoreBoard" />
        <activity android:name=".ColourGameActivity" />
        <activity android:name=".ColourStartingActivity" />
        <activity android:name=".Profile" />
        <activity android:name=".DifficultyLevel" />
        <activity android:name=".LogoutActivity" />
        <activity android:name=".UserScoreBoardActivity"></activity>
        <activity android:name=".ColourRankingsActivity" />
        <activity android:name=".ColourScoreBoard3x3" />
        <activity android:name=".ColourScoreBoard4x4" />
        <activity android:name=".ColourScoreBoard5x5" />
        <activity android:name=".ColourTileRoundsActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>